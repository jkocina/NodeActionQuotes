<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Action Movie Quotes</title>

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet">
  
    <!-- inject:css -->
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap-grid.css">
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap-reboot.css">
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/one-page-wonder.css">
    <link rel="stylesheet" href="/css/one-page-wonder.min.css">
    <link rel="stylesheet" href="/vendor/ionicons/ionicons-core.css">
    <link rel="stylesheet" href="/vendor/ionicons/ionicons-core.min.css">
    <link rel="stylesheet" href="/vendor/ionicons/ionicons.css">
    <link rel="stylesheet" href="/vendor/ionicons/ionicons.min.css">
    <!-- endinject -->
    
    <!-- inject:custom:js -->
    <!-- endinject -->
  </head>

  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">Action Quotes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <% for (var i=0; i < nav.length; i++) {%>
              <li>
                <a class="nav-link" href="<%= nav[i]["link"] %>"><%= nav[i]["text"] %></a>
              </li>
            <% } %>
            
            <!--<li class="nav-item">
              <a class="nav-link" href="#">Sign Up</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Log In</a>
            </li>
            -->
          </ul>
        </div>
      </div>
    </nav>

    <header class="masthead text-center text-white">
      <div class="masthead-content">
        <div class="container">
          <h1 class="masthead-heading mb-0">Less</h1>
          <h2 class="masthead-subheading mb-0">is more</h2>
          <a href="#" class="btn btn-primary btn-xl rounded-pill mt-5">Learn More</a>
        </div>
      </div>
      
      <!-- this here will print put some circles -->
      <% for(var i = 1 ; i <= 4 ; i++)  {%>
        <div class="bg-circle-<%=i%> bg-circle"></div>
      <%} %>
      
    </header>
    
    <% for (var i = 0; i < quotes.length; i++) {%>
    <section>
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6 order-lg-2">
            <div class="p-5">
              <img class="img-fluid rounded-circle" src="img/<%= quotes[i].src %>" alt="">
            </div>
          </div>
          <div class="col-lg-6 order-lg-1">
            <div class="p-5">
              <blockquote class="blockquote">
                <p class="mb-0">"<%= quotes[i].quote %>"</p>
                  <footer class="blockquote-footer"><%= quotes[i].movieStar %> in <cite title="Source Title"><%= movieOrShow(quotes[i].movie, quotes[i].show) %></cite></footer>
              </blockquote>
            </div>
          </div>
        </div>
      </div>
    </section>
    <% } %>

    <!-- Footer -->
    <footer class="py-5 bg-black">
      <div class="container">
        <p class="m-0 text-center text-white small">Copyright &copy; Your Website 2018</p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- inject:js -->
    <script src="/vendor/jquery/jquery.js"></script>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/jquery/jquery.slim.js"></script>
    <script src="/vendor/jquery/jquery.slim.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- endinject -->
  </body>

</html>
