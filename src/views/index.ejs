  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">Action Quotes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <% for (var i=0; i < nav.length; i++) {%>
              <li>
                <a class="nav-link" href="<%= nav[i]["link"] %>"><%= nav[i]["text"] %></a>
              </li>
            <% } %>

          </ul>
        </div>
      </div>
    </nav>

    <header class="masthead text-center text-white">
      <div class="masthead-content">
        <div class="container">
          <h1 class="masthead-heading mb-0">Less talk</h1>
          <h2 class="masthead-subheading mb-0">More action</h2>
          <a href="#" class="btn btn-primary btn-xl rounded-pill mt-5">Learn More</a>
        </div>
      </div>

      <!-- this here will print out circles -->
      <% for(var i = 1 ; i <= 4 ; i++)  {%>
      <div class="bg-circle-<%=i%> bg-circle"></div>
      <%} %>

    </header>

    <% for (var i = 0; i < quotes.length; i++) {%>
    <section>
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6 order-lg-2">
            <div class="p-5">
              <img class="img-fluid rounded-circle" src="img/<%= quotes[i].src %>" alt="">
            </div>
          </div>
          <div class="col-lg-6 order-lg-1">
            <div class="p-5">
              <blockquote class="blockquote">
                <p class="mb-0">"<%= quotes[i].quote %>"</p>
                  <footer class="blockquote-footer">
                    <%= quotes[i].movieStar %> in
                    <cite title="Source Title">
                      <%= movieOrShow(quotes[i].movie, quotes[i].show) %>
                    </cite>
                  </footer>
              </blockquote>
            </div>
          </div>
        </div>
      </div>
    </section>
    <% } %>

    <!-- Footer -->
    <footer class="py-5 bg-black">
      <div class="container">
        <p class="m-0 text-center text-white small">Copyright &copy; <a href="https://systemslife.net">Systems Life</a> 2018</p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- inject:js -->
    <script src="/vendor/jquery-modal/jquery.modal.js"></script>
    <script src="/vendor/jquery-modal/jquery.modal.min.js"></script>
    <script src="/vendor/jquery/jquery.js"></script>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/jquery/jquery.slim.js"></script>
    <script src="/vendor/jquery/jquery.slim.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- endinject -->

    <!-- inject:modal:js -->
    <script src="/vendor/jquery-modal/jquery.modal.js"></script>
    <script src="/vendor/jquery-modal/jquery.modal.min.js"></script>
    <!-- endinject -->

